{
  "name": "renovate-config-aberlaas",
  "version": "1.3.1",
  "description": "aberlaas's shareable renovate config",
  "repository": "git@github.com:pixelastic/renovate-config-aberlaas.git",
  "author": "Pixelastic <tim@pixelastic.com>",
  "license": "MIT",
  "devDependencies": {
    "aberlaas": "1.0.2"
  },
  "scripts": {
    "release": "aberlaas release"
  },
  "files": [
    "package.json"
  ],
  "renovate-config": {
    "default": {
      "description": "Default config options",
      "extends": [
        ":semanticCommitTypeAll(chore)"
      ],
      "rebaseStalePrs": true,
      "prConcurrentLimit": 20,
      "prHourlyLimit": 20,
      "timezone": "Europe/Paris",
      "circleci": {
        "enabled": false
      },
      "node": {
        "enabled": false
      },
      "automergeType": "branch",
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      },
      "packageRules": [
        {
          "groupName": "external dependencies",
          "packagePatterns": [
            ".*"
          ],
          "schedule": [
            "after 6pm and before 9am"
          ]
        },
        {
          "groupName": "tooling",
          "packageNames": [
            "aberlaas",
            "aoinan",
            "callirhoe",
            "ensure-url-trailing-slash",
            "firost",
            "golgoth",
            "norska",
            "pietro",
            "sov",
            "tailwind-config-norska"
          ],
          "packagePatterns": [
            "@pixelastic/.*"
          ],
          "schedule": [
            "every 2 hours"
          ]
        }
      ]
    },
    "enableMasterIssue": {
      "description": "Create a master issue to see any pending updates",
      "masterIssue": true,
      "masterIssueAutoclose": true,
      "masterIssueTitle": "chore(deps): All pending updates"
    },
    "automergePublicly": {
      "description": "Automerge minor and patch through Pull Requests allowing better visibility on what is happening",
      "automergeType": "pr"
    }
  }
}
