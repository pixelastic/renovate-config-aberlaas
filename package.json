{
  "name": "renovate-config-aberlaas",
  "version": "1.0.2",
  "description": "aberlaas's shareable renovate config",
  "repository": "git@github.com:pixelastic/renovate-config-aberlaas.git",
  "author": "Pixelastic <tim@pixelastic.com>",
  "license": "MIT",
  "devDependencies": {
    "aberlaas": "^0.4.9"
  },
  "scripts": {
    "release": "aberlaas release"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":genericConfig",
        ":setMasterIssue",
        ":setInvisibleUpdates"
      ]
    },
    "setMasterIssue": {
      "description": "Set a master issue to see all pending updates",
      "masterIssue": true,
      "masterIssueAutoclose": true,
      "masterIssueTitle": "chore(deps): All pending updates"
    },
    "setInvisibleUpdates": {
      "description": "Merge all minor and patch updates invisibly in the background. Creates a new PR only if tests fails, otherwise merges to master",
      "automergeType": "branch",
      "rebaseStalePrs": true,
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      }
    },
    "genericConfig": {
      "description": "Generic config not fitting in any specific part",
      "semanticCommits": true,
      "timezone": "Europe/Paris"
    }
  }
}
