{
  "name": "renovate-config-aberlaas",
  "version": "1.1.0",
  "description": "aberlaas's shareable renovate config",
  "repository": "git@github.com:pixelastic/renovate-config-aberlaas.git",
  "author": "Pixelastic <tim@pixelastic.com>",
  "license": "MIT",
  "devDependencies": {
    "aberlaas": "^0.4.9"
  },
  "scripts": {
    "release": "aberlaas release"
  },
  "renovate-config": {
    "default": {
      "description": "Default config options",
      "rebaseStalePrs": true,
      "semanticCommits": true,
      "prConcurrentLimit": 20,
      "prHourlyLimit": 20,
      "timezone": "Europe/Paris",
      "circleci": {
        "enabled": false
      },
      "node": {
        "enabled": false
      }
    },
    "enableMasterIssue": {
      "description": "Create a master issue to see any pending updates",
      "masterIssue": true,
      "masterIssueAutoclose": true,
      "masterIssueTitle": "chore(deps): All pending updates"
    },
    "automergeSilently": {
      "description": "Automerge minor and patch on master directly. Create a PR only when checks fails",
      "automergeType": "branch",
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      }
    },
    "automergePublicly": {
      "description": "Automerge minor and patch through Pull Requests allowing better visibility on what is happening",
      "automergeType": "pr",
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      }
    },
    "scheduleAtNight": {
      "description": "Make it run only during the night",
      "schedule": [
        "after 10pm and before 5:00am"
      ]
    },
    "scheduleAtAnyTime": {
      "description": "Make it run as soon as possible",
      "schedule": null
    }
  }
}
